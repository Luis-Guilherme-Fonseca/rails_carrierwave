<%= render 'layouts/errors', object: post %>

<%= form_for post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div>
    <p>
      <%= f.label :attachments %>
      <%= f.file_field :attachments, multiple: true %><br>
      <%= f.hidden_field :image_cache %>
    </p>
    <p>
      <%= f.text_field :remote_image_url %>
    </p>
    <small>Enter URL to an image</small>
  </div>

  <% if @post.image? %>
    <%= image_tag post.image.thumb.url %>
    <div>
      <%= label_tag :remove_image do %>
        Remove Image
        <%= f.check_box :remove_image %>
      <% end %>
    </div>
  <% end %>

  <%= f.submit %>
<% end %>
